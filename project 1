<body>
  <div class="container">
    <div class="sidebar">
      <h1>Campus AI</h1>
      <div class="nav-item active" data-sec="chat">💬 Chat</div>
      <div class="nav-item" data-sec="academic">📅 Academic</div>
      <div class="nav-item" data-sec="dining">🍽 Dining</div>
    </div>
    <div class="main">
      <div class="header"><b>Welcome, Student!</b></div>
      <div id="chat" class="panel active">
        <div class="messages" id="msgs"><div class="bot message">Hello 👋 Ask me anything!</div></div>
        <div class="input">
          <input id="inp" placeholder="Type a message...">
          <button id="send">➤</button>
        </div>
      </div>
      <div id="academic" class="panel"><h2>Academic Schedule</h2><p>Classes start Aug 26, 2024</p></div>
      <div id="dining" class="panel"><h2>Dining Hours</h2><p>Breakfast 7–10am, Lunch 11–3, Dinner 5–9</p></div>
    </div>
  </div>

  <script>
    const msgs=document.getElementById("msgs"),inp=document.getElementById("inp");
    document.getElementById("send").onclick=()=>{
      if(inp.value){
        msgs.innerHTML+=<div class="user message">${inp.value}</div>;
        setTimeout(()=>msgs.innerHTML+=<div class="bot message">Reply to: ${inp.value}</div>,600);
        inp.value='';
      }
    };
    document.querySelectorAll(".nav-item").forEach(item=>item.onclick=()=>{
      document.querySelectorAll(".nav-item").forEach(i=>i.classList.remove("active"));
      item.classList.add("active");
      document.querySelectorAll(".panel").forEach(p=>p.classList.remove("active"));
      document.getElementById(item.dataset.sec).classList.add("active");
    });
  </script>
